{
  "name": "root",
  "type": "module",
  "version": "0.0.0",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmuelbert/JMPlasterTemplates.git"
  },
  "scripts": {
    "format": "pnpm run format:code && pnpm run format:imports",
    "format:ci": "pnpm run format:code:ci && pnpm run format:imports:ci",
    "format:code": "pnpm biome format --write && prettier -w \"**/*\" --ignore-unknown --cache",
    "format:code:ci": "biome format && prettier -w \"**/*\" --ignore-unknown --cache --check",
    "format:imports": "biome check --formatter-enabled=false --write",
    "format:imports:ci": "biome ci --formatter-enabled=false",
    "lint": "eslint . --report-unused-disable-directives"
  },
  "workspaces": [
    "packages/markdown/*",
    "packages/integrations/*",
    "packages/*"
  ],
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=21.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@eslint/eslintrc": "^3.1.0",
    "@types/node": "^20.14.10",
    "esbuild": "^0.23.0",
    "eslint": "^9.6.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-regexp": "^2.6.0",
    "prettier": "^3.3.2",
    "prettier-plugin-astro": "^0.14.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0"
  },
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@9.1.4+sha512.9df9cf27c91715646c7d675d1c9c8e41f6fce88246f1318c1aa6a1ed1aeb3c4f032fcdf4ba63cc69c4fe6d634279176b5358727d8f2cc1e65b65f43ce2f8bfb0"
}
